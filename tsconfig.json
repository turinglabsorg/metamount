{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es2020",
    "outDir": ".build",
    "moduleResolution": "node",
    "module": "es2020",
    "lib": [
      "es2020",
      "dom"
    ],
    "rootDir": "./",
    "inlineSources": true,
    "sourceRoot": "/",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "**/*.ts"
  ]
}